<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<EditText 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:layout_weight="70" 
		android:id="@+id/edt_message" android:scrollbars="vertical" android:gravity="top|left"/>
	<LinearLayout 
		android:orientation="horizontal" 
		android:layout_weight="30" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<Button 
			android:layout_height="wrap_content" 
			android:layout_weight="50" 
			android:layout_width="fill_parent" 
			android:minHeight="100sp" 
			android:layout_gravity="center" 
			android:id="@+id/btn_send" android:text="@string/lbl_send_message" android:gravity="center"/>
		<Button 
			android:layout_height="wrap_content" 
			android:layout_weight="50" 
			android:layout_width="fill_parent" 
			android:minHeight="100sp" 
			android:layout_gravity="center" 
			android:id="@+id/btn_clear" android:text="@string/lbl_clear_message" android:gravity="center"/>
	</LinearLayout>
</LinearLayout>
