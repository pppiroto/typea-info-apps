<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
  <ModulePrefs title="skeleton">
  	<Require feature="opensocial-0.8"/>
    <Optional feature="content-rewrite">  
      <Param name="include-urls"></Param>  
      <Param name="exclude-urls">.*</Param>  
      <Param name="include-tags"></Param>
    </Optional> 
  </ModulePrefs> 
  <Content type="html">
     <![CDATA[ 
     	<script type="text/javascript" src="http://typea-mixi01.appspot.com/js/jquery-1.3.2.js"></script>
     	<script type="text/javascript" src="http://typea-info-apps.googlecode.com/svn/trunk/mixi_app/apps/js/typea.js"></script>
     	
     	<script type="text/javascript">
     		var tw = new TwitterUtil();
     		function request(url) {
     			var params = {};
				if (url == null) {
	     			var p = [];
	     			p['q'] = 'mixi';
	            	url = tw.search_url(p);
                } 
                params[gadgets.io.RequestParameters.METHOD] = gadgets.io.MethodType.GET;
                params[gadgets.io.RequestParameters.CONTENT_TYPE] = gadgets.io.ContentType.JSON;
                gadgets.io.makeRequest(url, response, params);
	        }
	        function response(dataResponse) {
	        	var jsondata = dataResponse.data;
	        	$('#content').html(tw.tw_search_gadget(jsondata,request));
	        }
	        function mk_param(k) {
	        	var v = "";
	        	var c = document.getElmentsByName(k);
	        	if (c) {
	        		v = c.value;
	        	}
	        	var p = k + "=" + v;
	        }
	        gadgets.util.registerOnLoadHandler(request);
       	</script>
       	<input type="text" name="q" /><input type="button" value="search" onclick="request(mk_param('q'))"/>
       	<div id="content"></div>
     ]]>
  </Content> 
</Module>
